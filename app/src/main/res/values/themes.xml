<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.TamangFood" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">#ffffff</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>


    <style name="Theme.TamangFood" parent="Base.Theme.TamangFood" />

    <style name="Theme.TamangFood.NoactionBar" parent="Theme.TamangFood">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="Base.Theme.TamangFood.fullscreen" parent="Base.Theme.TamangFood">
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="windowActionBar">false</item>
        <item name="windowActionBarOverlay">@null</item>
    </style>

    <style name="tamang_food">
        <item name="android:fontFamily">@font/poppins_bold</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">@dimen/text_size_37</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="title">
        <item name="android:fontFamily">@font/poppins_bold</item>
        <item name="android:textSize">@dimen/text_size_28</item>
        <item name="android:textColor">#3A3A3A</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="copy">
        <item name="android:fontFamily">@font/poppins_light</item>
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="android:textColor">#3A3A3A</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="get_started">
        <item name="android:textSize">@dimen/text_size_14</item>
        <item name="android:letterSpacing">0.06</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:gravity">center_horizontal|center_vertical</item>
    </style>

    <style name="all_your_fa">
        <item name="android:textSize">@dimen/text_size_30</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="android:textColor">#010F07</item>
    </style>
    <style name="order_from_">
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="android:letterSpacing">-0.03</item>
        <item name="android:textColor">#868686</item>
    </style>

    <style name="welcome_to">
        <item name="android:textSize">@dimen/text_size_33</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="android:textColor">#010F07</item>
    </style>

    <style name="enter_your">
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="android:letterSpacing">-0.03</item>
        <item name="android:textColor">#868686</item>
    </style>

    <style name="title_product">
        <item name="android:textSize">@dimen/text_size_24</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="android:textColor">#010F07</item>
    </style>

    <style name="text_description_common">
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="android:letterSpacing">-0.03</item>
        <item name="android:textColor">#868686</item>
    </style>
    <style name="text_description_type_">
        <item name="alpha">0.64</item>
        <item name="android:textSize">14sp</item>
        <item name="android:letterSpacing">-0.02</item>
        <item name="android:textColor">#010F07</item>
    </style>

    <style name="text_title">
        <item name="android:textSize">20sp</item>
        <item name="android:letterSpacing">0.02</item>
        <item name="android:textColor">#010F07</item>
    </style>

    <style name="text_title_setting">
        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing">-0.02</item>
        <item name="android:textColor">#010F07</item>
    </style>
    <style name="text_des_setting">
        <item name="android:textSize">14sp</item>
        <item name="android:letterSpacing">-0.02</item>
        <item name="android:textColor">#010F07</item>
    </style>

    <style name="BottomNavigationView" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">10sp</item>
    </style>

    <style name="BottomNavigationView.Active" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">10sp</item>
    </style>

    <style name="title_toolbar">
        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing">-0.03</item>
        <item name="android:textColor">#010F07</item>
    </style>

    <style name="title_edt">
        <item name="android:textSize">12sp</item>
        <item name="android:letterSpacing">0.07</item>
        <item name="android:textColor">#868686</item>
    </style>
</resources>